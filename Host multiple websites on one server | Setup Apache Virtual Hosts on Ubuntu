cd /var/www 
sudo mkdir -p Domain_name/public_html
sudo chown -R $USER:$USER Domain_name/public_html



sudo cp /etc/apache2/sites-available/000-default.conf /etc/apache2/sites-available/Domain_name.conf

sudo nano /etc/apache2/sites-available/Domain_name.conf

        ServerAdmin webmaster@domain_name.com
        DocumentRoot /var/www/domain_name.com/public_html
        ServerName domain_name.com
        ServerAlias www.domain_name.com
        
        

sudo a2ensite Domain_name.conf
sudo service apache2 restart

#optional
sudo a2disite 000-default.conf 
